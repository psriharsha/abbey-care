<script type="text/javascript">
refreshContent();
function refreshContent(){
	 var details = Android.refreshVitalContents();
	 var vals = new Array();
	 vals = details.split(",");
	 if(vals[0] != "null")
	 $('#rr').html(vals[0]);
	 else
		 $('#rr').html("--");
	 if(vals[1] != "null")
	 $('#hr').html(vals[1]);
	 else
		 $('#hr').html("--");
	 if(vals[2] != "null")
	 $('#st').html(vals[2]);
	 else
		 $('#st').html("--");
	 if(vals[3] != "null")
	 $('#po').html(vals[3]);
	 else
		 $('#po').html("--");
	 if(vals[4] != "null")
	 $('#pa').html(vals[4]);
	 else
		 $('#pa').html("--");
	 setInterval(function(){refreshContent()},2000);
}
</script>
